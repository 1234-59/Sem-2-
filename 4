#include <stdio.h>

int main() {
    int N;
    printf("Ingrese un n√∫mero entero: ");
    scanf("%d", &N);
    for (int i = 0; i < N; i++) {
        for (int j = 0; j <=i; j++) {
            printf("*");
        }
        printf("\n");
    } 
    for (int i = N ; i >=1; i--) {
        for (int j = 1; j <=i; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}


    
